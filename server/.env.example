# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/ai-persona-writer
MONGO_URI_TEST=mongodb://localhost:27017/ai-persona-writer-test

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# CORS Configuration
CLIENT_URL=http://localhost:3000

# Redis (Optional - for caching and share tokens)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Server-side Inference Mode
# Options: off, rule, tfjs
INFER_MODE=rule

# TensorFlow.js Model Path (only needed if INFER_MODE=tfjs)
TFJS_MODEL_PATH=./models/persona-model

# Analytics & Monitoring
ENABLE_ANALYTICS=true
LOG_LEVEL=info

# Email Configuration (for notifications - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password

# File Upload Limits
MAX_PERSONA_SIZE=10240
MAX_CHAT_MESSAGE_LENGTH=1000

# Share Token Configuration
SHARE_TOKEN_LENGTH=8
SHARE_TOKEN_EXPIRES_DAYS=30